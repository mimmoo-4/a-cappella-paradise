<h1>編集画面</h1>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました。
  <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @post do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :post_title %>

  <h4>本文</h4>
  <%= f.text_area :post_text %>

  <h4>投稿ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: '選択してください'} %>

  <%= f.submit'投稿' %>
  <%= link_to "削除", post_path(@post.id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
<% end %>