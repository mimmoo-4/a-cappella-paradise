<h2>タイトル</h2>
<p><%= @post.post_title %></p>

<h2>本文</h2>
<p><%= @post.post_text %></p>

<h2>ジャンル</h2>
<p><%= @genre.name %></p>

<h2>投稿者</h2>
<p><%= link_to @member.nickname,admin_member_path(@member.id) %></p>


<%= link_to "削除", admin_post_path(@post.id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
<%= link_to "戻る", admin_posts_path %>


<div>
  <p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <div>
      <%= image_tag post_comment.member.get_profile_image(30,30) %>
      <%= post_comment.member.nickname %>
      <%= post_comment.created_at.strftime('%Y/%m/%d') %>
      <%= post_comment.comment %>
    <%= link_to "削除", admin_post_post_comment_path(post_comment.post, post_comment), method: :delete, data: { confirm: "本当に削除しますか？" } %>
    </div>
  <% end %>
</div>
