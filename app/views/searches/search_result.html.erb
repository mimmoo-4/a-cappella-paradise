<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <!--検索対象がMember-->
  <% if @range == "Member" %>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
      </tr>
    <% end %>
  </tbody>
  <!--検索対象がMember以外（Postの時）-->
  <% else %>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_title %></td>
      </tr>
    <% end %>
  </tbody>
  <% end %>
</table>