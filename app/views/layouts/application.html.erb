<!DOCTYPE html>
<html>
  <head>
    <title>あかぺらぱらだいす</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <script src="https://kit.fontawesome.com/f08898a6a5.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100 bg-gray">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>あかぺらぱらだいす</span></a>
          <button class="navbar-toggler" type="botton" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if member_signed_in? %>
                <li class="nav-item">
                  <%= link_to member_path(current_member.id), class: 'nav-link text-light' do %>
                    <i class="fas fa-home"></i>マイページ
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to members_path, class: 'nav-link text-light' do %>
                    <i class="fas fa-users"></i>会員一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to posts_path, class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-list"></i>投稿一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to groups_path, class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-user-group"></i>グループ一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to root_path,class: 'nav-link text-light' do %>
                    <i class="fas fa-link"></i>アバウト
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_member_session_path, method: :delete,class: 'nav-link text-light' do %>
                    <i class="fas fa-sign-out-alt"></i>ログアウト
                  <% end %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to new_member_registration_path,class: 'nav-link text-light' do %>
                    <i class="fas fa-user-plus"></i>新規登録
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_member_session_path,class: 'nav-link text-light' do %>
                    <i class="fas fa-sign-in-alt"></i>ログイン
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to root_path,class: 'nav-link text-light' do %>
                    <i class="fas fa-link"></i>アバウト
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
      <p class="notice"><%= notice %></p>
      <%= render 'public/searches/search' %>
      <%= yield %>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
