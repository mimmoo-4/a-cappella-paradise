<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'member', member: @member %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>会員一覧</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>ニックネーム</th>
            <th>居住地</th>
            <th>メインパート</th>
          </tr>
        </thead>
        <tbody>
        <% @members.each do |member| %>
          <tr>
            <td class="td_vertical_align_middle">
              <%= link_to member_path(member) do %>
                <%= image_tag member.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td class="td_vertical_align_middle"><%= link_to member.nickname, member_path(member) %></td>
            <td class="td_vertical_align_middle"><%= member.address %></td>
            <td class="td_vertical_align_middle"><%= member.main_part %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center"><%= paginate @members, theme: 'bootstrap-5' %></div>
    </div>
  </div>
</div>