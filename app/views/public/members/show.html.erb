<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'member', member: @member %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2><%= @member.nickname %>の投稿一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead class="thead-dark">
          <tr>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th>コメント数</th>
          </tr>
        </thead>
        <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.post_title, post_path(post) %></td>
          <td><%= post.genre.name %></td>
          <td><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
