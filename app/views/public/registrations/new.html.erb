<h2>Sign up</h2>

<%= form_with model: @member, url: member_registration_path, id: 'new_member', class: 'new_member', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "氏名" %><br>
    <%= f.text_field :name, autofocus: true  %>
  </div>

  <div class="field">
    <%= f.label "氏名(ふりがな)" %><br>
    <%= f.text_field :furigana %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(再入力)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "ニックネーム" %><br>
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label "居住地(市町村まで)" %><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label "自己紹介(空欄可)" %><br>
    <%= f.text_area :self_introduction, placeholder:"空欄可" %>
  </div>

  <div class="field">
    <%= f.label "メインパート(空欄可)" %><br>
    <%= f.text_field :main_part, placeholder:"空欄可" %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
