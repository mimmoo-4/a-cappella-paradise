<div class='container px-5 px-sm-0'>
<%= flash[:notice] %>
  <div class='row'>
    <div class='col-md-3'>
    <%= render 'public/members/member', member: @member %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <div class="underline"><h2>グループ詳細</h2></div>
      <div style="height: 10px;"></div>
      <% if @group.group_image.attached? %>
        <%= image_tag @group.group_image, size: "100x100" %>
      <% else %>
        <%= image_tag 'no_image', size: "100x100" %>
      <% end %>
      <div style="height: 10px;"></div>
      <h4>グループ名</h4>
      <h5><%= @group.name %></h5>
      <div style="height: 10px;"></div>
      <h4>紹介文</h4>
      <h5><%= simple_format(@group.introduction) %></h5>
      <div style="height: 10px;"></div>
      <h4>グループメンバー</h4>
      <h5><% @group.members.each do |member| %>
        <li style="list-style: none;"><%= member.nickname %></li>
        <% end %>
      </h5>
      <div style="height: 10px;"></div>
      <h4>グループリーダー</h4>
      <%= link_to member_path(@group.owner) do %>
        <%= image_tag @group.owner.profile_image, size: "100x100" %>
      <% end %>
      <h5><%= link_to @group.owner.name, member_path(@group.owner) %></h5>
      <% if @group.is_owned_by?(current_member) %>
        <%= link_to edit_group_path(@group), class: "btn btn-sm btn-success" do %>
          <i class="fa-solid fa-pen">編集する</i>
        <% end %>
        <%= link_to group_path(@group), class: "btn btn-sm btn-danger",method: :delete, "data-confirm" => "本当に解散しますか？" do %>
          <i class="fa-solid fa-trash-can">解散する</i>
        <% end %>
      <% elsif @group.includesMember?(current_member) %>
        <%= link_to group_group_members_path(@group), class: "btn btn-sm btn-danger",method: :delete, "data-confirm" => "本当に退会しますか？" do %>
          <i class="fa-solid fa-person-through-window">脱退する</i>
        <% end %>
      <% else %>
        <%= link_to group_group_members_path(@group), class: "btn btn-sm btn-success", method: :post do %>
          <i class="fa-solid fa-person-walking-dashed-line-arrow-right">参加する</i>
        <% end %>
      <% end %>
      <%= link_to groups_path, class: "btn btn-sm btn-primary" do %>
        <i class="fa-solid fa-arrow-left">戻る</i>
      <% end %>
    </div>