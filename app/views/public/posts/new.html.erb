<div class="container px-5 px-sm-0">
  <div class="row">
    <div class='col-md-12'>

      <h1>新規投稿</h1>

      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました。
        <ul>
          <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: Post.new do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :post_title, class: "form-control", style: "width:40%" %>

        <h4>本文</h4>
        <%= f.text_area :post_text, class: "form-control", style: "width:100%", rows: "10" %>

        <h4>投稿ジャンル</h4>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: '選択してください'} %>
        <div class="d-flex justify-content-end">
          <button class="btn btn-success" type="submit">投稿する</button>
        </div>
      <% end %>
    </div>
  </div>
</div>