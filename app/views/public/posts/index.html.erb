<div class="container px-2 px-sm-0">
  <div class="row">
    <div class="col">
      <h1>投稿一覧</h1>
      <table class="table table-hover">
        <thead>
          <th></th>
          <th>投稿者</th>
          <th>タイトル</th>
          <th>ジャンル</th>
          <th>コメント数</th>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td class="td_vertical_align_middle">
                <%= image_tag post.member.get_profile_image(100,100) %>
              </td>
              <td class="td_vertical_align_middle"><%= link_to "#{post.member.nickname}", member_path(post.member) %></td>
              <td class="td_vertical_align_middle"><%= link_to post.post_title, post_path(post) %></td>
              <td class="td_vertical_align_middle"><%= post.genre.name %></td>
              <td class="td_vertical_align_middle"><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></td>
            </tr>
          <% end %>
          <div class="d-flex justify-content-center"><%= paginate @posts, theme: 'bootstrap-5' %></div>
        </tbody>
      </table>
    </div>
  </div>
</div>