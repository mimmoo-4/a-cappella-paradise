<h2 class="mt-3">新規投稿</h2>
<%= form_with model: Post.new, url: posts_path, method: :post do |f| %>

    <p>タイトル</p>
    <%= f.text_field :post_title  %>

  	<p>本文</p>
    <%= f.text_area :post_text %>

    <p>ジャンル</p>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: '選択してください'} %>


    <button class="btn btn-success" type="submit">投稿する</button>

<% end %>