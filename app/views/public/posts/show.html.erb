<h2>タイトル</h2>
<p><%= @post.post_title %></p>

<h2>本文</h2>
<p><%= @post.post_text %></p>

<h2>ジャンル</h2>
<p><%= @genre.name %></p>

<h2>投稿者</h2>
<p><%= link_to @member.nickname,member_path(@member.id) %></p>

<% if @post.member == current_member %>
  <%= link_to "編集",edit_post_path(@post.id) %>
  <%= link_to "削除", post_path(@post.id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
<% end %>
  <%= link_to "戻る", posts_path %>


<div>
  <p>コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <p><%= image_tag post_comment.member.get_profile_image(100,100) %></p>
    <%= post_comment.member.nickname %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %>
    <%= post_comment.comment %>
    <% if post_comment.member == current_member %>
      <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, data: { confirm: "本当に削除しますか？" } %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@post, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>