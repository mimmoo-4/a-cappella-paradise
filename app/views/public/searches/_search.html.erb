<% if member_signed_in? %>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="search_form d-flex justify-content-end">
        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([["メンバー検索","Member"],["投稿検索","Post"],["グループ検索","Group"]]) %>
          <%= f.select :search, options_for_select([["完全一致","perfect_match"],["前方一致","forward_match"],["後方一致","backward_match"],["部分一致","partial_match"]]) %>
          <%= f.submit "検索", class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>