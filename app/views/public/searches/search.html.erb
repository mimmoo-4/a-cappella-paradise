<table class="table table-hover table-inverse">
  <!-- 検索対象がMember -->
  <% if @range == "Member" %>
    <h2>メンバー検索結果  "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>画像</th>
        <th>ニックネーム</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= image_tag member.get_profile_image(50,50) %></td>
          <td><%= link_to member.nickname, member_path(member.id) %></td>
        </tr>
      <% end %>
    </tbody>
  <!-- 検索対象がMember以外（Postの時） -->
  <% else %>
    <h2>投稿検索結果  "<%= @word %>"</h2>
    <tr>
      <th colspan="1"></th>
      <th>タイトル</th>
      <th>本文</th>
    <tr/>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= image_tag post.member.get_profile_image(50,50) %></td>
          <td><%= link_to post.post_title, post_path(post.id) %></td>
          <td><%= post.post_text %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>